<div class="row">
  {{#each indicators}}
    <div class="mod-indicators-layout grid-xl-12 grid-lg-15 grid-md-20 grid-sm-60 grid-xs-60" data-agency="{{agency}}">
      <article class="mod-indicators-item" data-id="{{id}}" style="background-color: {{color}}">
        <header class="mod-indicators-header">
          {{!-- <a href="#" class="mod-indicators-agency" data-agency="{{agency}}">{{agency}}</a> --}}
          <span class="mod-indicators-frequency">{{frequency}}</span>
          <h2>{{name}}</h2>
        </header>
        <div class="mod-indicators-value">
          <strong class="mod-indicators-value-item">{{value}}</strong>
        </div>
        <div class="mod-indicators-footer sm-hidden">
          <table>
            <tr>
              <th>{{currentDate}}</th>
              <th>{{previousDate}}</th>
            </tr>
            <tr>
              <td>{{currentValue}}</td>
              <td>{{previousValue}}</td>
            </tr>
          </table>
        </div>
      </article>
    </div>
  {{/each}}
</div>
