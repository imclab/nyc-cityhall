<div class="mod-indicators-item" data-id="{{id}}" data-agency="{{agency}}" data-full="{{full}}" data-value="{{value}}" data-status="{{status}}" data-urgent="{{urgent}}">
  <article class="mod-indicators-content" style="background-color: {{color}}">
    <header class="mod-indicators-header">
      <a href="#" class="mod-indicators-agency" data-agency="{{agency}}">{{agency}}</a>
      <span class="mod-indicators-frequency">{{frequency}}</span>
      <h2>{{name}}</h2>
    </header>
    <div class="mod-indicators-value">
      <strong class="mod-indicators-value-item">{{displayValue}}</strong>
    </div>
    <div class="mod-indicators-footer sm-hidden">
      <table>
        <tr>
          <th>{{currentDate}}</th>
          <th>{{previousDate}}</th>
        </tr>
        <tr>
          <td>{{currentValue}}</td>
          <td>{{previousValue}}</td>
        </tr>
      </table>
    </div>
  </article>
</div>
